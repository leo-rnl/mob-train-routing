# =============================================================================
# MOB Train Routing - Environment Configuration
# =============================================================================
# Copy this file to .env before running docker compose
#
# WARNING: These are demo values for local testing only.
# In production, generate secure values for APP_KEY and POSTGRES_PASSWORD.
# =============================================================================

# Laravel APP_KEY (generate with: php artisan key:generate --show)
APP_KEY=base64:dGhpc2lzYXRlc3RrZXlmb3JkZXZlbG9wbWVudG9ubHk=

# PostgreSQL
POSTGRES_PASSWORD=mob_secret

# Optional: Auto-run migrations on startup (set to true for first deploy)
AUTO_MIGRATE=true

# =============================================================================
# HTTPS / Traefik Configuration
# =============================================================================

# Application URL (used by Laravel for generating URLs)
APP_URL=https://localhost

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://localhost

# Frontend API URL (baked into the build)
VITE_API_URL=https://localhost/api/v1
