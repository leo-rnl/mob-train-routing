<?xml version="1.0"?>
<ruleset name="MOB Train Routing">
    <description>PSR-12 coding standard for MOB Train Routing</description>

    <file>app</file>
    <file>database/seeders</file>
    <file>database/factories</file>
    <file>routes</file>
    <file>tests</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>config/*</exclude-pattern>

    <arg name="colors"/>
    <arg value="sp"/>

    <rule ref="PSR12">
        <!-- Allow snake_case for test methods (PHPUnit convention) -->
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
    </rule>
</ruleset>
